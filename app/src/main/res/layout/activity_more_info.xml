<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="com.example.flashnotenote.screen.moreinfo.MoreInfoActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBarMoreInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_icon_save"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="12dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolBarMoreInfo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="6dp"
            android:text="Color"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:onClick="@{() -> listener.goToListColor()}"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="@id/textColor"
            app:layout_constraintEnd_toStartOf="@+id/imageNextColor"
            app:layout_constraintBottom_toBottomOf="@id/textColor"
            android:src="@drawable/item_circle_red"
            android:layout_marginEnd="8dp"
            />
        
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageNextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/textColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textColor"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_next"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textSound"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textColor"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="6dp"
            android:text="Sound"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/textSound"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textSound"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_next"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textSound"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:text="Date"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/textDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textDate"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_next"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textDate"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:text="Time"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/textTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textTime"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_next"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textRepeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textTime"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:text="Repeat"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/textRepeat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/textRepeat"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_next"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
